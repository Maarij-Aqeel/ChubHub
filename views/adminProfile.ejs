    <script id="admin-events-data" type="application/json"><%- JSON.stringify(allEvents) %></script>
    <script src="/socket.io/socket.io.js"></script>

    <script>
      function showSection(sectionName) {
        // Hide all sections
        const sections = document.querySelectorAll('.content-section');
        sections.forEach(sec => sec.classList.remove('active'));

        // Remove active class from all nav links
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => link.classList.remove('active'));

        // Show selected section
        document.getElementById(sectionName).classList.add('active');

        // Add active class to clicked nav button
        event.target.classList.add('active');

        if(sectionName === 'calendar') {
          initAdminCalendar();
        } else if(sectionName === 'messages') {
          initAdminMessaging();
        }
      }

      window.addEventListener("DOMContentLoaded", function () {
        const flash = JSON.parse(
          document.getElementById("flash-data").dataset.flash || "{}"
        );
        if (flash && (flash.error || flash.message)) {
          showToast(
            flash.error ? flash.error : flash.message,
            flash.error ? "error" : "success"
          );
        }
      });

      function initAdminCalendar() {
        const calendarEl = document.getElementById('admin-calendar');
        if (!calendarEl) return;
        if (calendarEl._calendar) return;

        const rawAdminEvents = JSON.parse(document.getElementById('admin-events-data').textContent);
        const events = rawAdminEvents.map(e => ({
          title: `[${e.status}] ${e.title}`,
          start: e.startsAt,
          end: e.endsAt,
          backgroundColor: e.status === 'approved' ? '#10b981' : e.status === 'rejected' ? '#ef4444' : '#f59e0b',
          extendedProps: {
            description: e.description,
            location: e.location,
            activityType: e.activityType,
            targetAudience: e.targetAudience,
            status: e.status,
            clubName: e.club ? e.club.username : 'Unknown'
          }
        }));

        const calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          events: events,
          eventClick: function(info) {
            const props = info.event.extendedProps;
            const startTime = new Date(info.event.start).toLocaleString();
            const endTime = info.event.end ? new Date(info.event.end).toLocaleString() : 'TBD';

            // Show event modal
            const modal = document.getElementById('adminEventModal');
            document.getElementById('adminEventTitle').textContent = info.event.title;
            document.getElementById('adminEventStatus').textContent = props.status;
            document.getElementById('adminEventStart').textContent = startTime;
            document.getElementById('adminEventEnd').textContent = endTime;
            document.getElementById('adminEventLocation').textContent = props.location || 'TBD';
            document.getElementById('adminEventActivityType').textContent = props.activityType || 'N/A';
            document.getElementById('adminEventTargetAudience').textContent = props.targetAudience || 'N/A';
            document.getElementById('adminEventClub').textContent = props.clubName;
            document.getElementById('adminEventDescription').textContent = props.description || 'N/A';
            modal.style.display = 'flex';
          },
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
          },
          height: 'auto'
        });

        calendar.render();
        calendarEl._calendar = calendar;
      }
      function initAdminMessaging() {
        const socket = io();
        const adminId = <%= user.id %>;

        // Join admin rooms
        socket.emit('join-rooms', { userId: adminId, role: 'admin' });

        // Load message history
        loadAdminMessages();

        // Bind send button
        document.getElementById('admin-send-button').addEventListener('click', function() {
          sendAdminMessage(socket, adminId);
        });
      }

      async function loadAdminMessages() {
        try {
          const response = await fetch('/messages/admin');
          const messages = await response.json();

          const messageList = document.getElementById('admin-message-list');
          messageList.innerHTML = '';

          if (messages.length === 0) {
            messageList.innerHTML = '<div style="color: #6B7280; text-align: center;">No broadcast messages sent yet</div>';
            return;
          }

          messages.forEach(function(msg) {
            const messageDiv = document.createElement('div');
            messageDiv.style.cssText = 'padding: 1rem; border-radius: 8px; background: #FFFFFF; margin-bottom: 0.5rem; border: 1px solid #E5E7EB;';
            messageDiv.innerHTML = '<div style="font-weight: 600; color: #1E3A8A; margin-bottom: 0.5rem;">üì¢ Broadcast by ' + msg.senderName + '</div>' +
                                  '<div style="margin-bottom: 0.5rem;">' + msg.message + '</div>' +
                                  '<div style="font-size: 0.8rem; color: #6B7280;">' + new Date(msg.timestamp).toLocaleString() + '</div>';
            messageList.appendChild(messageDiv);
          });

          messageList.scrollTop = messageList.scrollHeight;
        } catch (err) {
          console.error('Error loading messages:', err);
        }
      }

      function sendAdminMessage(socket, adminId) {
        const target = document.getElementById('admin-message-target').value;
        const message = document.getElementById('admin-message-input').value.trim();

        if (!target || !message) {
          showToast('Please select recipients and enter a message', 'error');
          return;
        }

        socket.emit('send-message', {
          senderId: adminId,
          receiverId: null,
          clubId: null,
          message: message,
          target: target
        });
        console.log(`target is ${target}`)

        // Clear input
        document.getElementById('admin-message-input').value = '';
        showToast('Broadcast message sent successfully!', 'success');
      }

      function showToast(msg, type) {
        const container = document.getElementById("toast-container");
        const toast = document.createElement("div");
        toast.className =
          "toast " + (type === "error" ? "toast-error" : "toast-success");
        toast.innerText = msg;
        container.appendChild(toast);
        setTimeout(() => {
          toast.classList.add("show");
        }, 100);
        setTimeout(() => {
          toast.classList.remove("show");
          setTimeout(() => toast.remove(), 500);
        }, 3400);
      }
    </script>
    <style>
