</head>
<body>
  <div id="toast-container"></div>

  <!-- ===== Navbar ===== -->
  <div class="navbar">
    <a href="/club/<%= user.id %>">
      <i class="fas fa-home"></i>
      <span>Home</span>
    </a>
    <a href="/club/<%= user.id %>/applications">
      <i class="fas fa-users"></i>
      <span>Applications</span>
    </a>
    <a href="/club/<%= user.id %>/messages" class="active">
      <i class="fas fa-comments"></i>
      <span>Messages</span>
    </a>
    <a href="/club/<%= user.id %>">
      <i class="fas fa-user"></i>
      <span>Profile</span>
    </a>
  </div>

  <!-- ===== Page Container ===== -->
  <div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1><i class="fas fa-comments"></i> Club Messages</h1>
      <p>Communicate with your subscribed students and admin</p>
    </div>

    <!-- Messages Container -->
    <div class="messages-container">
      <!-- Recipients List -->
      <div class="recipients-list">
        <h2>Recipients</h2>
        <div id="recipients-container">
          <!-- Recipients will be loaded here -->
        </div>
      </div>

      <!-- Chat Area -->
      <div class="chat-area">
        <div class="chat-header" id="chat-header">
          <div class="select-recipient-state">
            <i class="fas fa-comments"></i>
            <h3>Select a Recipient</h3>
            <p>Choose a student or admin to start chatting</p>
          </div>
        </div>

        <div class="chat-messages" id="chat-messages">
          <div class="select-recipient-state">
            <i class="fas fa-comments"></i>
            <h3>Select a Recipient</h3>
            <p>Choose a student or admin to start chatting</p>
          </div>
        </div>

        <div class="chat-input" id="chat-input" style="display: none;">
          <textarea id="message-input" placeholder="Type your message..." rows="2"></textarea>
          <button class="send-btn" id="send-button">
            <i class="fas fa-paper-plane"></i>
            Send
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Club Messages Page JavaScript
  const socket = io();
  const clubId = <%= JSON.stringify(user.id) %>;
  const clubUsername = <%= JSON.stringify(user.username) %>;

    // Initialize when page loads
    window.addEventListener('DOMContentLoaded', function() {
      socket.emit('join-rooms', { userId: clubId, role: 'club' });
      loadRecipients();
    });

    // Load recipients (subscribed students and admin)
    async function loadRecipients() {
      try {
        // Load subscribed students
        console.log('Loading subscriptions for clubId:', clubId);
        const subscriptionsResponse = await fetch('/api/subscriptions/club/' + clubId);
        console.log('Subscriptions response status:', subscriptionsResponse.status);
        
        if (!subscriptionsResponse.ok) {
          const errorData = await subscriptionsResponse.json();
          console.error('Subscriptions API error:', errorData);
          showToast('Error loading students: ' + errorData.error, 'error');
          return;
        }
        
        const subscriptions = await subscriptionsResponse.json();
        console.log('Subscriptions loaded:', subscriptions);

        const container = document.getElementById('recipients-container');
        container.innerHTML = '';

        // ===== STUDENTS SECTION =====
        const studentsSection = document.createElement('div');
        studentsSection.className = 'recipients-section';
        studentsSection.innerHTML = '<h3>Students</h3>';

        // Add group chat option
        const groupDiv = document.createElement('div');
        groupDiv.className = 'recipient-item';
        groupDiv.onclick = function() { selectRecipient('group', 'Group Chat', 'Send messages to all subscribed students', this, 'group'); };
        groupDiv.innerHTML = '<h3>ðŸ“¢ Group Chat</h3><p>Message all subscribed students</p>';
        studentsSection.appendChild(groupDiv);

        // Add label for individual students
        const studentListLabel = document.createElement('div');
        studentListLabel.style.fontSize = '0.9rem';
        studentListLabel.style.fontWeight = '600';
        studentListLabel.style.color = '#6B7280';
        studentListLabel.style.marginTop = '0.75rem';
        studentListLabel.style.marginBottom = '0.5rem';
        studentListLabel.style.paddingLeft = '0.5rem';
        studentListLabel.innerText = 'Individual Students';
        studentsSection.appendChild(studentListLabel);

        // Add individual students
        if (subscriptions && subscriptions.length > 0) {
          subscriptions.forEach(function(sub) {
            const student = sub.student;
            if (student) {
              const div = document.createElement('div');
              div.className = 'recipient-item';
              div.onclick = function() { selectRecipient(student.id, student.username, 'Individual student', this, 'student'); };
              div.innerHTML = '<h3>' + student.username + '</h3><p>Individual student</p>';
              studentsSection.appendChild(div);
            }
          });
        } else {
          const noStudentsDiv = document.createElement('div');
          noStudentsDiv.style.padding = '1rem';
          noStudentsDiv.style.color = '#6B7280';
          noStudentsDiv.innerText = 'No students subscribed yet';
          studentsSection.appendChild(noStudentsDiv);
        }

        container.appendChild(studentsSection);

        // ===== ADMIN SECTION =====
        const adminSection = document.createElement('div');
        adminSection.className = 'recipients-section';
        adminSection.innerHTML = '<h3>Admin</h3>';

        // Add admin options (load from API)
        try {
          const adminsResponse = await fetch('/api/admins');
          const admins = await adminsResponse.json();
          if (admins && admins.length) {
            admins.forEach(function(admin) {
              const adminDiv = document.createElement('div');
              adminDiv.className = 'recipient-item';
              adminDiv.onclick = function() { selectRecipient(admin.id, admin.username, 'Contact system administrator', this, 'admin'); };
              adminDiv.innerHTML = '<h3>ðŸ‘‘ ' + admin.username + '</h3><p>System administrator</p>';
              adminSection.appendChild(adminDiv);
            });
          } else {
            const noAdminDiv = document.createElement('div');
            noAdminDiv.style.padding = '1rem';
            noAdminDiv.style.color = '#6B7280';
            noAdminDiv.innerText = 'No admin available';
            adminSection.appendChild(noAdminDiv);
          }
        } catch (adminErr) {
          console.error('Error loading admins:', adminErr);
          const errorDiv = document.createElement('div');
          errorDiv.style.padding = '1rem';
          errorDiv.style.color = '#DC2626';
          errorDiv.innerText = 'Failed to load admins';
          adminSection.appendChild(errorDiv);
        }

        container.appendChild(adminSection);
      } catch (err) {
        console.error('Error loading recipients:', err);
        showToast('Failed to load recipients', 'error');
      }
    }

    // Select a recipient to chat with. role: 'group' | 'student' | 'admin'
    let currentRecipientId = null;
    let currentRecipientType = null;
    function selectRecipient(recipientId, recipientName, description, element, role) {
      console.log('selectRecipient called:', { recipientId, recipientName, role });
      currentRecipientId = recipientId;
      currentRecipientType = role || 'student';

      // Update active state
      document.querySelectorAll('.recipient-item').forEach(item => {
        item.classList.remove('active');
      });
      
      // element is now the clicked item itself (passed as 'this' from onclick)
      if (element && element.classList) {
        element.classList.add('active');
      }

      // Update chat header
      const headerDiv = document.getElementById('chat-header');
      if (headerDiv) {
        headerDiv.innerHTML = '';
        const h2 = document.createElement('h2');
        h2.textContent = 'Chatting with ' + recipientName;
        const p = document.createElement('p');
        p.textContent = description;
        headerDiv.appendChild(h2);
        headerDiv.appendChild(p);
      }

      // Show chat input
      const chatInput = document.getElementById('chat-input');
      if (chatInput) {
        chatInput.style.display = 'flex';
      }

      // Load messages based on recipient type
      if (currentRecipientType === 'group') {
        console.log('Loading group messages');
        loadGroupMessages();
      } else if (currentRecipientType === 'admin') {
        console.log('Loading admin messages for ID:', currentRecipientId);
        loadIndividualMessages(currentRecipientId);
      } else {
        console.log('Loading individual student messages for ID:', currentRecipientId);
        loadIndividualMessages(currentRecipientId);
      }
    }

    // Load group messages (to all subscribed students)
    async function loadGroupMessages() {
      try {
        const response = await fetch('/messages/club/' + clubId);
        const messages = await response.json();

        // Filter group messages for this club
        const groupMessages = messages.filter(function(msg) {
          return msg.messageType === 'group' && msg.clubId == clubId;
        });

        const messagesContainer = document.getElementById('chat-messages');
        messagesContainer.innerHTML = '';

        if (groupMessages.length === 0) {
          messagesContainer.innerHTML = '<div class="empty-state"><i class="fas fa-comments"></i><h3>No Messages Yet</h3><p>Start the group conversation with your first message</p></div>';
          return;
        }

        groupMessages.forEach(function(msg) {
          appendMessage(msg);
        });

        // Scroll to bottom
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
      } catch (err) {
        console.error('Error loading group messages:', err);
        showToast('Failed to load messages', 'error');
      }
    }

    // (Admin uses same direct message loader as individual)

    // Load individual student messages
    async function loadIndividualMessages(studentId) {
      try {
        console.log('Loading individual messages for studentId:', studentId, 'clubId:', clubId);
        const response = await fetch('/messages/club/' + clubId);
        const messages = await response.json();
        console.log('All messages from API:', messages);

        // Filter direct messages with this student
        const individualMessages = messages.filter(function(msg) {
          return msg.messageType === 'direct' &&
                 ((msg.senderId == clubId && msg.receiverId == studentId) ||
                  (msg.senderId == studentId && msg.receiverId == clubId));
        });

        console.log('Filtered individual messages:', individualMessages);

        const messagesContainer = document.getElementById('chat-messages');
        messagesContainer.innerHTML = '';

        if (individualMessages.length === 0) {
          messagesContainer.innerHTML = '<div class="empty-state"><i class="fas fa-user"></i><h3>No Messages Yet</h3><p>Start the conversation with your first message</p></div>';
          return;
        }

        individualMessages.forEach(function(msg) {
          appendMessage(msg);
        });

        // Scroll to bottom
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
      } catch (err) {
        console.error('Error loading individual messages:', err);
        showToast('Failed to load messages: ' + err.message, 'error');
      }
    }

    // Append a message to chat
    function appendMessage(msg) {
      const messagesContainer = document.getElementById('chat-messages');
      const messageDiv = document.createElement('div');
      const isSent = msg.senderId == clubId;
      messageDiv.className = 'message ' + (isSent ? 'sent' : 'received');

      messageDiv.innerHTML = '<div class="sender">' + msg.senderName + '</div>' +
                            '<div class="text">' + msg.message + '</div>' +
                            '<div class="time">' + new Date(msg.timestamp).toLocaleString() + '</div>';

      messagesContainer.appendChild(messageDiv);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    // Send message
    function sendMessage() {
      const input = document.getElementById('message-input');
      const message = input.value.trim();

      if (!message || !currentRecipientId) {
        return;
      }

      // Optimistically add message to UI
      const tempMsg = {
        senderId: clubId,
        senderName: clubUsername,
        message: message,
        timestamp: new Date()
      };
      appendMessage(tempMsg);

      // Send to server
      let messageData = {
        senderId: clubId,
        message: message
      };

      if (currentRecipientType === 'group' || currentRecipientId === 'group') {
        // Group message to all students
        messageData.clubId = clubId;
        messageData.messageType = 'group';
      } else {
        // currentRecipientId is an id (student or admin)
        messageData.receiverId = currentRecipientId;
        messageData.messageType = 'direct';
      }

      socket.emit('send-message', messageData);

      input.value = '';
      input.focus();
    }

    // Event listeners
    document.getElementById('send-button').addEventListener('click', sendMessage);
    document.getElementById('message-input').addEventListener('keypress', function(e) {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });

    // Socket.IO events
    socket.on('new-message', function(msg) {
      try {
        // Group conversation
        if (currentRecipientType === 'group' && msg.messageType === 'group' && msg.clubId == clubId) {
          appendMessage(msg);
          return;
        }

        // Direct conversation between club and another user (student or admin)
        if (msg.messageType === 'direct' && currentRecipientId) {
          const otherId = currentRecipientId;
          // Only append if this message is between the club and the currently selected user
          if ((msg.senderId == clubId && msg.receiverId == otherId) || (msg.receiverId == clubId && msg.senderId == otherId)) {
            appendMessage(msg);
            return;
          }
        }
      } catch (err) {
        console.error('Error handling incoming message:', err);
      }
    });

    socket.on('error', function(data) {
      showToast(data.message, 'error');
    });

    // Toast function
    function showToast(msg, type) {
      const container = document.getElementById('toast-container');
      const toast = document.createElement('div');
      toast.className = 'toast ' + (type === 'error' ? 'toast-error' : 'toast-success');
      toast.innerText = msg;
      container.appendChild(toast);
      setTimeout(() => { toast.classList.add('show'); }, 100);
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 500);
      }, 3400);
    }
  </script>

  <!-- Toast Styles -->
  <style>
    #toast-container {
      z-index: 9999;
      position: fixed;
      top: 32px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .toast {
      opacity: 0;
      min-width: 250px;
      margin-top: 12px;
      padding: 1em 2em;
      border-radius: 8px;
      background: #2563eb;
      color: #fff;
      box-shadow: 0 4px 16px rgba(0,0,0,0.12);
      font-weight: 500;
      transition: opacity 0.4s, transform 0.4s;
      transform: translateY(-25px) scale(0.95);
      transition: all 0.4s;
      pointer-events: none;
    }
    .toast.show {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    .toast-error {
      background: #e11d48;
    }
    .toast-success {
      background: #16a34a;
    }
  </style>
</body>
