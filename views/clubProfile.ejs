  <script>
    const editModal = document.getElementById('editModal');
    const postModal = document.getElementById('postModal');
    const currentUserId = <%= user.id %>;

    // Socket.IO chat functionality
    const socket = io();

    function switchTab(tabName) {
      // Hide all tab contents  
      const tabContents = document.querySelectorAll('.tab-content');
      tabContents.forEach(tab => tab.classList.remove('active'));

      // Remove active class from all tabs
      const tabs = document.querySelectorAll('.tab');
      tabs.forEach(tab => tab.classList.remove('active'));

      // Show selected tab content
      document.getElementById(tabName).classList.add('active');

      // Add active class to clicked tab
      event.target.closest('.tab').classList.add('active');

      if(tabName === 'calendar') {
        initClubCalendar();
      } else if(tabName === 'messages') {
        initChat();
      }
    }

    function openEditModal() { editModal.style.display = 'flex'; }
    function closeEditModal() { editModal.style.display = 'none'; }

    function openPostModal() { postModal.style.display = 'flex'; }
    function closePostModal() { postModal.style.display = 'none'; }

    function initClubCalendar() {
      const calendarEl = document.getElementById('club-calendar');
      if (!calendarEl) return;

      // Check if calendar is already initialized
      if (calendarEl._calendar) {
        calendarEl._calendar.updateSize(); // Adjust size if already initialized
        return;
      }

      const rawClubEvents = JSON.parse(document.getElementById('club-events-data').textContent);
      const events = rawClubEvents.map(e => ({
        title: e.title,
        start: e.startsAt,
        end: e.endsAt,
        extendedProps: {
          description: e.description,
          location: e.location,
          activityType: e.activityType,
          targetAudience: e.targetAudience,
          status: e.status,
          clubName: '<%= user.profile_data?.clubName || user.username %>'
        }
      }));

      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: events,
        eventClick: function(info) {
          const props = info.event.extendedProps;
          const startTime = new Date(info.event.start).toLocaleString();
          const endTime = info.event.end ? new Date(info.event.end).toLocaleString() : 'TBD';
          alert(`Event: ${info.event.title}\nStatus: ${props.status}\nStart: ${startTime}\nEnd: ${endTime}\nLocation: ${props.location || 'TBD'}\nActivity Type: ${props.activityType || 'N/A'}\nTarget Audience: ${props.targetAudience || 'N/A'}\nClub: ${props.clubName}\nDescription: ${props.description || 'N/A'}`);
        },
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        height: 'auto'
      });

      calendar.render();
      calendarEl._calendar = calendar;
    }

    function showReportNotification() {
      showToast('You must submit reports for completed events before creating new events. Please complete the pending reports first.', 'error');
    }

    window.onclick = function(event) {
      if (event.target === editModal) closeEditModal();
      if (event.target === postModal) closePostModal();
    }

    window.addEventListener('DOMContentLoaded', function() {
      const flash = JSON.parse(document.getElementById('flash-data').dataset.flash || '{}');
      if (flash && (flash.error || flash.message)) {
        showToast(flash.error ? flash.error : flash.message, flash.error ? 'error' : 'success');
      }
    });

    function showToast(msg, type) {
      const container = document.getElementById('toast-container');
      const toast = document.createElement('div');
      toast.className = 'toast ' + (type === 'error' ? 'toast-error' : 'toast-success');
      toast.innerText = msg;
      container.appendChild(toast);
      setTimeout(() => { toast.classList.add('show'); }, 100);
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 500);
      }, 3400);
    }

    // Chat functions
    function initChat() {
      // Join rooms for the club user
      socket.emit('join-rooms', { userId: currentUserId, role: 'club' });
      loadMessages();
    }

    async function loadMessages() {
      try {
        const response = await fetch('/messages/club/' + currentUserId);
        const messages = await response.json();
        const messagesList = document.getElementById('messages-list');
        const chatMessages = document.getElementById('chat-messages');

        // Clear existing messages
        messagesList.innerHTML = '';
        chatMessages.innerHTML = '';

        if (messages.length === 0) {
          messagesList.innerHTML = '<div style="color: #6B7280; text-align: center;">No messages yet</div>';
          return;
        }

        // Group messages by conversation
        const conversations = {};
        messages.forEach(function(msg) {
          const key = msg.clubId || 'broadcast';
          if (!conversations[key]) conversations[key] = [];
          conversations[key].push(msg);
        });

        // Display conversation list
        Object.keys(conversations).forEach(function(key) {
          const convMsgs = conversations[key];
          const latestMsg = convMsgs[convMsgs.length - 1];
          const div = document.createElement('div');
          div.style.cssText = 'padding: 1rem; border-radius: 8px; background: #FFFFFF; margin-bottom: 0.5rem; cursor: pointer; border: 2px solid #E5E7EB; transition: all 0.3s ease;';
          div.onclick = function() { loadConversation(key, convMsgs); };
          const displayKey = key === 'broadcast' ? 'üì¢ All Messages' : 'Club Conversations';
          div.innerHTML = '<div style="font-weight: 600; color: #2563EB;">' + displayKey + '</div>' +
                          '<div style="color: #6B7280; font-size: 0.9rem;">' + latestMsg.message.slice(0, 50) + (latestMsg.message.length > 50 ? '...' : '') + '</div>' +
                          '<div style="color: #9CA3AF; font-size: 0.8rem;">' + new Date(latestMsg.timestamp).toLocaleString() + '</div>';
          messagesList.appendChild(div);
        });

        // Load the first conversation by default
        if (Object.keys(conversations).length > 0) {
          const firstKey = Object.keys(conversations)[0];
          loadConversation(firstKey, conversations[firstKey]);
        }
      } catch (err) {
        console.error('Error loading messages:', err);
      }
    }

    function loadConversation(key, messages) {
      const chatMessages = document.getElementById('chat-messages');
      chatMessages.innerHTML = '';

      // Mark all conversation list items as unselected
      document.querySelectorAll('#messages-list div').forEach(function(div) {
        div.style.borderColor = '#E5E7EB';
      });

      // Mark selected conversation
      event.target.closest('div').style.borderColor = '#2563EB';

      messages.forEach(function(msg) {
        const messageDiv = document.createElement('div');
        const userId = currentUserId;
        const isSent = msg.senderId === userId;
        messageDiv.style.cssText = 'margin-bottom: 1rem; padding: 0.75rem; border-radius: 8px; max-width: 70%; ' +
                                  (isSent ? 'margin-left: auto; background: #2563EB; color: #FFFFFF;' : 'background: #FFFFFF; color: #111827;');
        messageDiv.innerHTML = '<div style="font-weight: 600; margin-bottom: 0.25rem;">' + msg.senderName + '</div>' +
                              '<div>' + msg.message + '</div>' +
                              '<div style="font-size: 0.8rem; opacity: 0.8;">' + new Date(msg.timestamp).toLocaleString() + '</div>';
        chatMessages.appendChild(messageDiv);
      });

      // Scroll to bottom
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    // Socket.IO message event listeners
    socket.on('new-message', function(msg) {
      // Reload messages if we're on messages tab
      // But only if this message is relevant to clubs
      const messagesTab = document.getElementById('messages');
      if (messagesTab.classList.contains('active')) {
        // Admin broadcasts should only show to clubs if sent to clubs or everyone
        if (msg.clubId === null && msg.receiverId === null) {
          // This is an admin broadcast - only show if sent to clubs or all
          if (!msg.adminTarget || msg.adminTarget === 'clubs') {
            loadMessages();
          }
        } else {
          // Regular club messages - show all
          loadMessages();
        }
      }
    });

    socket.on('error', function(data) {
      showToast(data.message, 'error');
    });

    // Message sending
    document.getElementById('message-target').addEventListener('change', function(e) {
      const studentSelector = document.getElementById('student-selector');
      if (e.target.value === 'student') {
        studentSelector.style.display = 'block';
        loadSubscribedStudents();
      } else {
        studentSelector.style.display = 'none';
      }
    });

    document.getElementById('send-button').addEventListener('click', sendMessage);
    document.getElementById('message-input').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') sendMessage();
    });

    async function loadSubscribedStudents() {
      try {
        const response = await fetch('/api/subscriptions/club/' + currentUserId);
        const subscriptions = await response.json();

        const studentSelect = document.getElementById('student-target');
        studentSelect.innerHTML = '';

        if (subscriptions.length === 0) {
          const option = document.createElement('option');
          option.value = '';
          option.textContent = 'No subscribed students';
          studentSelect.appendChild(option);
          return;
        }

        const defaultOption = document.createElement('option');
        defaultOption.value = '';
        defaultOption.textContent = 'Choose subscribed student...';
        studentSelect.appendChild(defaultOption);

        subscriptions.forEach(function(sub) {
          const option = document.createElement('option');
          option.value = sub.student.id;
          option.textContent = sub.student.profile_data?.fullName || sub.student.username;
          studentSelect.appendChild(option);
        });
      } catch (err) {
        console.error('Error loading subscribed students:', err);
        showToast('Failed to load subscribed students', 'error');
      }
    }

    function sendMessage() {
      const input = document.getElementById('message-input');
      const target = document.getElementById('message-target');
      const studentTarget = document.getElementById('student-target');
      const message = input.value.trim();

      if (!message || !target.value) return;

      let clubId = null;
      let receiverId = null;

      if (target.value === 'admin') {
        // Send to admin - set receiverId to null, backend will handle admin messaging
        receiverId = null;
        clubId = currentUserId;
      } else if (target.value === 'student' && studentTarget.value) {
        // Send to specific student
        receiverId = studentTarget.value;
        clubId = currentUserId;
      } else {
        showToast('Please select a valid recipient', 'error');
        return;
      }

      socket.emit('send-message', {
        senderId: currentUserId,
        receiverId: receiverId,
        clubId: clubId,
        message: message
      });

      input.value = '';
    }
  </script>

