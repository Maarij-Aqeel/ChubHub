<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Club Messages - UChub</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/admin_nav.css" />
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-left">
        <div class="navbar-brand">
          <i class="fas fa-shield-halved"></i>
          <span>Admin Portal</span>
        </div>
        <button
          onclick="if (typeof showSection !== 'undefined') showSection('dashboard'); else window.location='/admin/dashboard';"
          class="nav-link"
          id="nav-dashboard"
        >
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </button>
        <a href="/admin/messages" class="nav-link" id="nav-messages">
          <i class="fas fa-comments"></i>
          <span>Messages</span>
        </a>
        <button
          onclick="if (typeof showSection !== 'undefined') showSection('calendar'); else window.location='/admin/dashboard#calendar';"
          class="nav-link"
          id="nav-calendar"
        >
          <i class="fas fa-calendar-alt"></i>
          <span>Calendar</span>
        </button>
        <a href="/admin/reports" class="nav-link" id="nav-reports">
          <i class="fas fa-chart-line"></i>
          <span>Reports</span>
        </a>
        <a href="/admin/settings" class="nav-link" id="nav-settings">
          <i class="fas fa-cog"></i>
          <span>Profile Settings</span>
        </a>
      </div>
      <a href="/logout">
        <button class="logout-btn-nav">
          <i class="fas fa-sign-out-alt"></i>
          <span>Log Out</span>
        </button>
      </a>
    </div>
    <script>
      // Set active nav link based on current page
      document.addEventListener('DOMContentLoaded', function() {
        const path = window.location.pathname;
        // Remove all active classes first
        document.querySelectorAll('.nav-link').forEach(link => {
          link.classList.remove('active');
        });
        // Set active based on path
        if (path === '/admin/dashboard') {
          const hash = window.location.hash;
          if (hash === '#calendar') {
            document.getElementById('nav-calendar').classList.add('active');
          } else {
            document.getElementById('nav-dashboard').classList.add('active');
          }
        } else if (path === '/admin/messages') {
          document.getElementById('nav-messages').classList.add('active');
        } else if (path === '/admin/reports') {
          document.getElementById('nav-reports').classList.add('active');
        } else if (path === '/admin/settings') {
          document.getElementById('nav-settings').classList.add('active');
        }
      });
    </script>
  </body>
</html>
